<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crie a sua conta</title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>
    <div class="form-container">
        <h2>Cadastre-se</h2>

        <!-- Mensagem de confirmação que será exibida após o envio -->
        <div id="confirmation-message" style="display: none; color: green;">
            Conta criada com sucesso!
        </div>

        <!-- Adicionado enctype para permitir upload de arquivos -->
        <form id="signup-form" action="/signup" method="post" enctype="multipart/form-data" onsubmit="return showConfirmationMessage()">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" id="email" name="email" placeholder="Digite seu email" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="name">Nome:</label>
                <input type="text" id="name" name="username" placeholder="Digite seu nome" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">Senha:</label>
                <input type="password" id="password" name="password" placeholder="Senha" required>
            </div>
            <div class="form-group">
                <label for="profile-pic">Foto de Perfil:</label>
                <input type="file" id="profile-pic" name="profilePic" accept="image/*" required>
            </div>
            <button type="submit" class="submit-btn">Crie a sua conta</button>
        </form>
    </div>

    <script>
        function showConfirmationMessage() {
            // Exibir a mensagem de confirmação após o envio
            document.getElementById("confirmation-message").style.display = "block";
            // Permitir que o formulário seja enviado ao servidor
            return true; // Não bloquear o envio
        }
    </script>
</body>
</html>
